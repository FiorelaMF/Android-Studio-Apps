<?xml version="1.0" encoding="utf-8"?>
<!-- TODO 5: Creamos el diseño de la ventana de login -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/upc"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Sistema de Ventilación"
        android:textAlignment="center"
        android:textColor="@color/red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forma_edit"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:hint="Ingrese su correo electrónico"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:id="@+id/edtMainActivityUsuario"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forma_edit"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:hint="Ingrese su contraseña"
        android:paddingVertical="5dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:id="@+id/edtMainActivityClave"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/forma_boton"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:id="@+id/btnMainActivityIngresar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="@color/red"
        android:id="@+id/txvMainActivityOlvido"/>
    <ProgressBar
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/pgbMainActivityEspera"
        android:visibility="gone"/>

</LinearLayout>
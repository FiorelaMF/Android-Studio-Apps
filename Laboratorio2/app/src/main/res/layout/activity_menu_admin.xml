<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.MenuAdminActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido Sergio"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:id="@+id/txvBienvenida"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvBienvenida"
        android:layout_marginTop="25dp"
        android:background="@drawable/forma_option"
        android:text="Ver VentilaciÃ³n de aulas"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/btnAdminVentAulas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdminVentAulas"
        android:layout_marginTop="25dp"
        android:background="@drawable/forma_option"
        android:text="Ver casos de fiebre"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/btnAdminVerFiebre"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdminVerFiebre"
        android:layout_marginTop="25dp"
        android:background="@drawable/forma_option"
        android:text="Registrar Alumno"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/btnAdminRegistrarAlumno"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdminRegistrarAlumno"
            android:layout_marginTop="25dp"
            android:background="@drawable/forma_option"
            android:text="Eliminar Alumno"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/btnAdminEliminarAlumno"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdminEliminarAlumno"
            android:layout_marginTop="25dp"
            android:background="@drawable/forma_option"
            android:text="Matricular Alumno"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/btnAdminMatricularAlumno"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdminMatricularAlumno"
            android:layout_marginTop="25dp"
            android:background="@drawable/forma_option"
            android:text="Ver Asistencia"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/btnAdminVerAsist"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdminVerAsist"
            android:layout_marginTop="25dp"
            android:background="@drawable/forma_option"
            android:text="Programar Curso"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/btnAdminProgramarCurso"/>

    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.RegistrarAlumnoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar alumno o docente"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:id="@+id/txvRegistrarActivityTitulo"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/txvRegistrarActivityTitulo"
            android:hint="Ingrese su correo electrónico"
            android:padding="5dp"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:id="@+id/edtAdmin3Correo"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/edtAdmin3Correo"
            android:hint="Ingrese su nombre"
            android:padding="5dp"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:id="@+id/edtAdmin3Nombre"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/edtAdmin3Nombre"
            android:hint="Ingrese su apellido paterno"
            android:padding="5dp"
            android:background="@drawable/forma_boton"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:id="@+id/edtAdmin3Apellidop"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/edtAdmin3Apellidop"
            android:hint="Ingrese su apellido materno"
            android:padding="5dp"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:id="@+id/edtAdmin3Apellidom"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/edtAdmin3Apellidom"
            android:hint="Ingrese su código UPC"
            android:padding="5dp"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:id="@+id/edtAdmin3Codigo"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spiAdmin3Carrera"
            android:layout_centerHorizontal="true"
            android:entries="@array/carrera"
            android:layout_below="@+id/edtAdmin3Codigo"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spiAdmin3Sexo"
            android:layout_centerHorizontal="true"
            android:entries="@array/sexo"
            android:layout_below="@+id/spiAdmin3Carrera"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spiAdmin3Estado"
            android:layout_centerHorizontal="true"
            android:entries="@array/estado"
            android:layout_below="@+id/spiAdmin3Sexo"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spiAdmin3Campus"
            android:layout_centerHorizontal="true"
            android:entries="@array/campus"
            android:layout_below="@+id/spiAdmin3Estado"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="Registrar"
            android:layout_below="@+id/spiAdmin3Campus"
            android:layout_marginTop="20dp"
            app:backgroundTint="@null"
            android:background="@drawable/forma_boton"
            android:textSize="22sp"
            android:id="@+id/btnAdmin3Registrar"/>
        <ProgressBar
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:id="@+id/pgbRegistrarActivityEspera"
            android:visibility="gone"/>

    </RelativeLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_upc" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de variables de aula"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed-light"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C-51"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-light"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperatura: 00.0"
            android:background="#D8D7D7"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:inputType="text"
            android:id="@+id/edtTemperatura"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Humedad: 00.0"
            android:background="#D8D7D7"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:inputType="text"
            android:id="@+id/edtHumedad"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CO2: 00.0"
            android:background="#D8D7D7"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:inputType="text"
            android:id="@+id/edtCO2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aforo"
            android:background="#D8D7D7"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:inputType="text"
            android:id="@+id/edtAforo"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btnMainActivityRegistrar"
            app:backgroundTint="@null"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</LinearLayout>
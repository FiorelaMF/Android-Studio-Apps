<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiPerfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/upc"
            android:layout_marginTop="40dp"
            android:id="@+id/img_mifoto"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/forma_edit"
            android:hint="Nombre"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edt_nombre_edicion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/forma_edit"
            android:hint="Apellidos"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edt_apellido_edicion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código UPC"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edt_codigo_edicion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edt_correo_edicion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carrera"
            android:background="@drawable/forma_edit"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/edt_carrera_edicion"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/cargo"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/spi_cargo_edicion"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/campus"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/spi_campus_edicion"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/estado_curso"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/spi_estado_edicion"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grabarcambios"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:backgroundTint="@null"
            android:background="@drawable/forma_boton"
            android:textSize="20sp"
            android:id="@+id/btn_editar_edicion"/>


    </LinearLayout>
</ScrollView>
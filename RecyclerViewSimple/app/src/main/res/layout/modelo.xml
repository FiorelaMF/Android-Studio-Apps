<?xml version="1.0" encoding="utf-8"?>
<!-- TODO 3: Creamos el modelo diseño XML para presetar en el RecyclerView -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="18dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="4dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAlumno"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:src="@drawable/woman_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvNombre"
                android:text="Marie Curie"
                android:layout_toEndOf="@id/imgAlumno"
                android:layout_marginTop="14dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvCodigo"
                android:text="u201818493"
                android:layout_toEndOf="@id/imgAlumno"
                android:layout_below="@id/txvNombre"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvCarrera"
                android:text="Química"
                android:layout_toEndOf="@id/imgAlumno"
                android:layout_below="@id/txvCodigo"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
            android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvPonderado"
                android:text="17.5"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48dp"
                android:textColor="@color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
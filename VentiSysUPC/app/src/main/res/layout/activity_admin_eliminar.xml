<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/fondobu"
    tools:context=".CLIENTE.ClienteDatosActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/opaco">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded"
            android:gravity="left">
            <Button
                android:id="@+id/back"
                style="@style/MENU"
                android:background="@drawable/bback"/>
            <TextView
                style="@style/ENCABEZADO"
                android:text="@string/ELIMI"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/TEXTO"
                android:text="CÃ³digo:" />
            <EditText
                android:id="@+id/codigo"
                style="@style/ESCRIBIR"
                android:hint="@string/CODIG" />
            <Button
                android:id="@+id/envio"
                style="@style/BOTON"
                android:text="@string/BUSCA"/>
            <LinearLayout
                android:id="@+id/info"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto"
                    style="@style/FOTO"
                    app:civ_border_color="@color/colorBlanco"
                    app:civ_border_width="4dp"/>
                <TextView
                    android:id="@+id/nombre"
                    style="@style/TEXTO"
                    android:text="Nombre: " />
                <TextView
                    android:id="@+id/apelidos"
                    style="@style/TEXTO"
                    android:text="Apellidos: " />
                <TextView
                    android:id="@+id/carrera"
                    style="@style/TEXTO"
                    android:text="Carrera: " />
                <TextView
                    android:id="@+id/sexo"
                    style="@style/TEXTO"
                    android:text="Sexo: " />
                <Button
                    android:id="@+id/eliminar"
                    style="@style/BOTON"
                    android:text="ELIMINAR"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
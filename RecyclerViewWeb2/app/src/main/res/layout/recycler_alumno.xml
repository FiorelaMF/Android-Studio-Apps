                android:id="@+id/txvCarreraAlumno"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="RETIRADO"
                android:textAlignment="center"
                android:textSize="20sp"
